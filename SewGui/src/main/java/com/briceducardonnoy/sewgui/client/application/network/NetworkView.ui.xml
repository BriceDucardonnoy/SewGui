<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:brice="urn:import:com.briceducardonnoy.sewgui.client.widgets">
             
    <ui:style>
    	.parent {
			/* Legacy */
		    display: -moz-box;
		    display: -webkit-box;
		 
		    /* Hybrid */
		    display: -ms-flexbox;
		 
		    /* Modern */
		    display: -webkit-flex;
		    display: flex;
		}
		
		.wifiOptions {
			font-size: 10px;
		}
		
		.roundBtn {
			margin-left: 10px;
			border-radius: 100px;
		}
		
		.btnPane {
			height: 35px;
		}
	
    </ui:style>
    
    <g:HTMLPanel ui:field="main">
	    <g:HTMLPanel ui:field="allSettings" styleName="mainAlignment">
	    	<!-- Main config: WiFi/Eth, DHCP/static -->
	    	<g:HTMLPanel ui:field="config" styleName="mainConfig">
		    	<!-- <g:HTMLPanel ui:field="connectionType" addStyleNames="{style.networkRadioBox}"> -->
		    	<g:HTMLPanel ui:field="connectionType" styleName="networkRadioBox">
		    		<g:RadioButton ui:field="ethernet" name="connectionType" value="true">Ethernet</g:RadioButton><br/>
		    		<g:RadioButton ui:field="wifi" name="connectionType">WiFi</g:RadioButton>
		    	</g:HTMLPanel>
		    	<g:HTMLPanel ui:field="configType" styleName="networkRadioBox">
		    		<g:RadioButton ui:field="dhcp" name="configType" value="true">DHCP</g:RadioButton><br/>
		    		<g:RadioButton ui:field="staticConf" name="configType">Static</g:RadioButton>
		    	</g:HTMLPanel>
	    	</g:HTMLPanel>
	    	<!-- Settings: IP, NM, GW... -->
	    	<g:HTMLPanel ui:field="settings" styleName="settings">
	    		<!-- WiFi ESSID and selection -->
	    		<g:HTMLPanel styleName="formRow">
	    			<g:Label ui:field="wifiLabel" styleName="labelForm">WiFi</g:Label>
	    			<brice:TextBoxForm ui:field="wifiText" name="ESSID" formGroup="NETWORK" />
	    			<b:Button ui:field="searchWifiBtn" icon="SEARCH" addStyleNames="{style.roundBtn}" />
	    		</g:HTMLPanel>
	    		<!-- WiFi password with a remember and possibility to see password -->
	    		<g:HTMLPanel styleName="formRow">
	    			<g:Label ui:field="pwdLabel" styleName="labelForm">Password</g:Label>
	    			<g:PasswordTextBox ui:field="pwdText" />
	    			<g:CheckBox ui:field="clearPwd" addStyleNames="{style.wifiOptions}">Show</g:CheckBox>
	    			<g:CheckBox ui:field="rememberPwd" addStyleNames="{style.wifiOptions}">Remember</g:CheckBox>
	    		</g:HTMLPanel>
	    		<!-- IP -->
	    		<g:HTMLPanel styleName="formRow">
	    			<g:Label ui:field="ipLabel" styleName="labelForm">IP Address</g:Label>
	    			<brice:TextBoxForm ui:field="ipText" name="IP" formGroup="NETWORK" />
	    		</g:HTMLPanel>
	    		<!-- Netmask -->
	    		<g:HTMLPanel styleName="formRow">
	    			<g:Label ui:field="nmLabel" styleName="labelForm">Netmask</g:Label>
	    			<brice:TextBoxForm ui:field="nmText" name="Netmask" formGroup="NETWORK" />
	    		</g:HTMLPanel>
	    		<!-- Gateway -->
	    		<g:HTMLPanel styleName="formRow">
	    			<g:Label ui:field="gwLabel" styleName="labelForm">Gateway</g:Label>
	    			<brice:TextBoxForm ui:field="gwText" name="Gateway" formGroup="NETWORK" />
	    		</g:HTMLPanel>
	    		<!-- Primary DNS -->
	    		<g:HTMLPanel styleName="formRow">
	    			<g:Label ui:field="dns1Label" styleName="labelForm">Primary DNS</g:Label>
	    			<brice:TextBoxForm ui:field="dns1Text" name="Primary DNS" formGroup="NETWORK" />
	    		</g:HTMLPanel>
	    		<!-- Secondary DNS -->
	    		<g:HTMLPanel styleName="formRow">
	    			<g:Label ui:field="dns2Label" styleName="labelForm">Secondary DNS</g:Label>
	    			<brice:TextBoxForm ui:field="dns2Text" name="Secondary DNS" formGroup="NETWORK" />
	    		</g:HTMLPanel>
	    	</g:HTMLPanel>
    	</g:HTMLPanel><!-- allSettings -->
    	<!-- Buttons -->
    	<g:LayoutPanel addStyleNames="{style.btnPane}">
    		<g:layer left="25%" width="100px">
    			<b:Button ui:field="cancelBtn" icon="TIMES" addStyleNames="btn-inverse">Cancel</b:Button>
    		</g:layer>
    		<g:layer right="25%" width="100px">
    			<b:Button ui:field="submitBtn" icon="CHECK" addStyleNames="btn-inverse">Apply</b:Button>
    		</g:layer>
    	</g:LayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>