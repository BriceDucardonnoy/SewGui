		</b:Navbar>
		
		<g:HTMLPanel styleName="mainContent">
			<b:Button ui:field="reload" size="LARGE" type="INFO">Reload</b:Button>
			<b:Button ui:field="connect2device" size="LARGE" type="PRIMARY">Connect to a device</b:Button>
			<b:Button ui:field="disconnect" size="LARGE" icon="STAR" type="WARNING">Disonnect</b:Button>
			<b:Button ui:field="discoverWifi" addStyleNames="btn-inverse">Discover WiFi</b:Button>
